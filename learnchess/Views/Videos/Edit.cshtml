@model learnchess.Models.Videos

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Videos</h1>

<hr />
<div class="row my-1">
	<div class="col-md-4 bg-dark text-white">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="VideosId" />
			<div class="form-group">
				<label asp-for="Video" class="control-label"></label>
				<input asp-for="Video" class="form-control" />
				<span asp-validation-for="Video" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Url" class="control-label"></label>
				<input asp-for="Url" class="form-control" />
				<span asp-validation-for="Url" class="text-danger"></span>
			</div>
			<div class="form-group my-2">
				<input type="submit" value="Save" class="btn btn-outline-info" />
			</div>
			<div class="my-2">
				<a asp-action="Index" type="button" class="btn btn-outline-warning">Back to List</a>
			</div>
		</form>
	</div>
</div>

