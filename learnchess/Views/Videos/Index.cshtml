@model IEnumerable<learnchess.Models.Videos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Video != null)
                {
                    <img style="width:150px;height:100px;" id="photo" class="" alt="..." object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(item.Video))">
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VideosId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VideosId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VideosId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
