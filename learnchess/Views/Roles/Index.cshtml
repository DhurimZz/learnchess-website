@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Roles Menager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Role Menager</h1>
<form method="post" asp-action="AddRole" asp-controller="Roles">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
           <th>Id</th>
           <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td><a asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
            </tr>
        }        
    </tbody>
</table>