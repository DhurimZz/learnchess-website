@model learnchess.Models.Contactus

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-left my-4">Contact us</h2>
    <!--Section description-->


    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form asp-action="Create">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input asp-for="name" class="form-control" />
                            <label for="name" class="">Your name</label>
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input asp-for="email" class="form-control" />
                            <label for="email" class="">Your email</label>
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input asp-for="id" class="form-control" />
                            <label for="subject" class="">Id</label>
                            <span asp-validation-for="id" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <input asp-for="Contact" class="form-control" />
                            <label for="message">Your message</label>
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="text-center text-md-left">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>


            </form>
            <div class="my-2">
                <a asp-action="Index" type="button" class="btn btn-outline-warning">Back to List</a>
            </div>


            <div class="status"></div>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>Republika e Kosovës</p>
                </li>

                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+383 044 123 456</p>
                </li>

                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@learnchess.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

    </section>
    <!--Section: Contact v.2-->
