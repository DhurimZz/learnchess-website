@model IEnumerable<learnchess.Models.Contactus>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ContactUs</h1>

<p>
	<a asp-action="Create" type="button" class="btn btn-outline-primary">Create New</a>
</p>
<div class="row my-5">
	<h3 class="fs-4 mb-3">Messages throught ContactUS</h3>
	<div class="col">
		<table class="table table-dark table-hover rounded shadow-sm">
			<thead>
				<tr>
					<th scope="col" width="50">
						@Html.DisplayNameFor(model => model.name)
					</th>
					<th scope="col">
						@Html.DisplayNameFor(model => model.email)
					</th>
					<th scope="col">
						@Html.DisplayNameFor(model => model.Contact)
					</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td scope="row">
							@Html.DisplayFor(modelItem => item.name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.email)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Contact)
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.id" type="button" class="btn btn-outline-info">Edit</a> |
							<a asp-action="Details" asp-route-id="@item.id" type="button" class="btn btn-outline-secondary">Details</a> |
							<a asp-action="Delete" asp-route-id="@item.id" type="button" class="btn btn-outline-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
